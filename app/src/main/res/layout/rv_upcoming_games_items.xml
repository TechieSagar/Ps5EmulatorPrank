<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/splash_bg_new1">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_list"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:src="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/layout_linear_itemlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_list2_clickable"
        android:layout_toEndOf="@id/image_list"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/mountain_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_elevation_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_8_000_m" />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_list2_clickable"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_alignParentEnd="true"/>




</RelativeLayout>